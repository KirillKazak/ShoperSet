<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/width_item_flash_sale"
    android:layout_height="@dimen/height_item_flash_sale"
    android:layout_margin="@dimen/margin_little"
    app:cardCornerRadius="@dimen/radius_item_latest"
    app:cardMaxElevation="@dimen/elevation_top">

    <ImageView
        android:id="@+id/iv_image_flash_sale_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_sale_flash_sale_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_tv_sale"
            android:text="@string/sale"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_extra_small"
            android:gravity="center"
            android:paddingHorizontal="@dimen/margin_extra_little"
            android:layout_margin="@dimen/margin_little"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            tools:ignore="RelativeOverlap" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_salesmen_photo_sale_item"
            android:layout_width="@dimen/size_salesmen_photo"
            android:layout_height="@dimen/size_salesmen_photo"
            android:src="@drawable/icon_salesman"
            android:layout_margin="@dimen/margin_little"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/color_hint"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_category_flash_sale_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_tv_category"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_super_small"
            android:gravity="center"
            android:paddingHorizontal="@dimen/margin_extra_little"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_extra_little"
            android:layout_above="@id/tv_product_name_flash_sale_item"
            tools:text="@string/phones"/>

        <TextView
            android:id="@+id/tv_product_name_flash_sale_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textColor="@color/color_text_product"
            android:textSize="@dimen/text_size_extra_small"
            android:paddingHorizontal="@dimen/margin_extra_little"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_super_small"
            android:layout_above="@id/tv_product_price_flash_sale_item"
            tools:text="Samsung S10"/>

        <TextView
            android:id="@+id/tv_product_price_flash_sale_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textColor="@color/color_text_product"
            android:textSize="@dimen/text_size_extra_small"
            android:paddingHorizontal="@dimen/margin_extra_little"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_little"
            android:layout_alignParentBottom="true"
            tools:text="$ 180,000"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:id="@+id/iv_add_to_basket_flash_sale_item"
            android:layout_width="@dimen/size_add_to_basket_latest"
            android:layout_height="@dimen/size_add_to_basket_latest"
            android:background="@drawable/icon_btn_plus"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_little"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/iv_add_to_likes_flash_sale_item"
            android:layout_width="@dimen/size_add_to_likes_latest"
            android:layout_height="@dimen/size_add_to_likes_latest"
            android:background="@drawable/icon_btn_like"
            android:layout_marginEnd="@dimen/margin_extra_little"
            android:layout_marginBottom="@dimen/margin_little"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/iv_add_to_basket_flash_sale_item"
            tools:ignore="ContentDescription,RtlHardcoded" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>