<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.product.ProductFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_vertical_50_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_vertical_70_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7"/>

    <ImageView
        android:id="@+id/iv_arrow_back_product"
        android:layout_width="@dimen/size_arrow_back"
        android:layout_height="@dimen/size_arrow_back"
        android:background="@drawable/icon_arrow_left"
        android:layout_margin="@dimen/margin_large"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription"
        android:elevation="@dimen/elevation_top"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp2_main_photo_product"
            android:layout_width="@dimen/width_main_product_photo"
            android:layout_height="@dimen/height_main_product_photo"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_arrow_back_product"
            tools:listitem="@layout/item_main_photo_product"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/background_share_frame"
            android:elevation="@dimen/elevation_top"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/vp2_main_photo_product"
            app:layout_constraintEnd_toEndOf="@id/vp2_main_photo_product"
            app:layout_constraintTop_toTopOf="@id/vp2_main_photo_product"
            app:layout_constraintBottom_toBottomOf="@id/vp2_main_photo_product">
            <ImageView
                android:id="@+id/iv_like_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_like"
                android:layout_marginBottom="@dimen/margin_small"
                tools:ignore="ContentDescription" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_share_line"
                android:background="@color/color_search_line"
                android:paddingHorizontal="@dimen/margin_little"
                android:layout_marginHorizontal="@dimen/margin_little"/>
            <ImageView
                android:id="@+id/iv_share_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_share"
                android:layout_marginTop="@dimen/margin_small"
                tools:ignore="ContentDescription" />
        </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_additional_photo_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vp2_main_photo_product"
        tools:listitem="@layout/item_additional_photo_product"/>

    <TextView
        android:id="@+id/tv_price_product"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textSize="@dimen/text_size_regular"
        android:layout_marginEnd="@dimen/margin_small"
        app:layout_constraintStart_toEndOf="@id/gl_vertical_70_product"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recycler_additional_photo_product"
        tools:text="$ 25558.00"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/gl_vertical_70_product"
        app:layout_constraintTop_toBottomOf="@id/recycler_additional_photo_product"
        app:layout_constraintBottom_toTopOf="@id/iv_buy_settings_product">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UselessLeaf">
            <TextView
                android:id="@+id/tv_name_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_semi_bold"
                android:textSize="@dimen/text_size_large"
                android:layout_marginStart="@dimen/margin_large"
                tools:text="New balance Sneakers"/>
            <TextView
                android:id="@+id/tv_description_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textColor="@color/color_hint"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="@dimen/text_size_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                tools:text="Features waterproof, fire, air resistant shoes. all changed when the country of fire attacked"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/margin_small"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/iv_popularity_product"
                    android:layout_width="@dimen/size_icon_popularity"
                    android:layout_height="@dimen/size_icon_popularity"
                    android:background="@drawable/icon_popularity"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:id="@+id/tv_popularity_mark_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="@dimen/text_size_small"
                    android:layout_marginStart="@dimen/margin_little"
                    tools:text="10.0"/>
                <TextView
                    android:id="@+id/tv_reviews_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/color_hint"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="@dimen/text_size_small"
                    android:layout_marginStart="@dimen/margin_little"
                    tools:text="(4000 reviews)"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_color_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/color"
                android:textAlignment="center"
                android:textColor="@color/color_hint"
                android:fontFamily="@font/montserrat_semi_bold"
                android:textSize="@dimen/text_size_small"
                android:layout_marginStart="@dimen/margin_small" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_color_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_product_color"/>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/iv_buy_settings_product"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_buy_settings_product"
        android:background="@drawable/background_buy_settings_frame"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="ContentDescription"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_add_to_card_product"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_btn_add_to_card_product"
        android:background="@drawable/background_btn_authorization"
        android:layout_marginHorizontal="@dimen/margin_small"
        app:layout_constraintTop_toTopOf="@id/iv_buy_settings_product"
        app:layout_constraintBottom_toBottomOf="@id/iv_buy_settings_product"
        app:layout_constraintStart_toStartOf="@id/gl_vertical_50_product"
        app:layout_constraintEnd_toEndOf="@id/iv_buy_settings_product"/>
    <TextView
        android:id="@+id/tv_total_price_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/color_text_total_price"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="@dimen/text_size_small"
        tools:text="$12000"
        app:layout_constraintTop_toTopOf="@id/btn_add_to_card_product"
        app:layout_constraintBottom_toBottomOf="@id/btn_add_to_card_product"
        app:layout_constraintStart_toStartOf="@id/btn_add_to_card_product"
        app:layout_constraintEnd_toStartOf="@id/tv_add_to_card_product"
        android:elevation="@dimen/elevation_top"/>
    <TextView
        android:id="@+id/tv_add_to_card_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_to_card"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintTop_toTopOf="@id/btn_add_to_card_product"
        app:layout_constraintBottom_toBottomOf="@id/btn_add_to_card_product"
        app:layout_constraintStart_toEndOf="@id/tv_total_price_product"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="@dimen/elevation_top"/>
    <TextView
        android:id="@+id/tv_quantity_title_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/color_text_total_price"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="@dimen/text_size_small"
        android:text="@string/quantity"
        android:layout_margin="@dimen/margin_small"
        app:layout_constraintStart_toStartOf="@id/iv_buy_settings_product"
        app:layout_constraintTop_toTopOf="@id/iv_buy_settings_product"/>
    <TextView
        android:id="@+id/tv_quantity_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/color_text_total_price"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="@dimen/text_size_small"
        tools:text="2000"
        android:layout_margin="@dimen/margin_small"
        app:layout_constraintStart_toEndOf="@id/tv_quantity_title_product"
        app:layout_constraintTop_toTopOf="@id/iv_buy_settings_product"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_minus_quantity_product"
        android:layout_width="@dimen/width_btn_quantity"
        android:layout_height="@dimen/height_btn_quantity"
        android:background="@drawable/background_btn_authorization"
        android:text="@string/minus"
        android:textColor="@color/white"
        android:layout_marginHorizontal="@dimen/margin_small"
        app:layout_constraintTop_toBottomOf="@id/tv_quantity_title_product"
        app:layout_constraintBottom_toBottomOf="@id/iv_buy_settings_product"
        app:layout_constraintStart_toStartOf="@id/iv_buy_settings_product"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_plus_quantity_product"
        android:layout_width="@dimen/width_btn_quantity"
        android:layout_height="@dimen/height_btn_quantity"
        android:background="@drawable/background_btn_authorization"
        android:text="@string/plus"
        android:textColor="@color/white"
        android:layout_marginHorizontal="@dimen/margin_small"
        app:layout_constraintTop_toBottomOf="@id/tv_quantity_title_product"
        app:layout_constraintBottom_toBottomOf="@id/iv_buy_settings_product"
        app:layout_constraintStart_toEndOf="@id/btn_minus_quantity_product"/>

</androidx.constraintlayout.widget.ConstraintLayout>



